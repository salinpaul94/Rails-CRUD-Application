<div id="<%= dom_id friend %>">


  <div class="jumbotron">
    <h1 class="display-4">
      <%= friend.first_name %>
      <%= friend.last_name %>
    </h1>
    <p class="lead">
      Email:-  <%= friend.email %>
    </p>
    <p class="lead">
      Phone:- <%= friend.phone %>
      <%= friend.facebook %>
    </p>
    <p class="lead">
      Facebook:- <%= friend.facebook %>
    </p>
    <div class="btn-group" role="group" aria-label="Basic example">
      <%= link_to "Edit", edit_friend_path(friend), class:"btn btn-warning"%>
      <%= button_to "Delete", friend, method: :delete, class:"btn btn-danger" %>
    </div>
  </div>
</div>
