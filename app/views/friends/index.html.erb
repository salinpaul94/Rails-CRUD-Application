<h1>Friend List</h1>

<div id="friends">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th><strong>First name</strong></th>
        <th><strong>Last name</strong></th>
        <th><strong>Email</strong></th>
        <th><strong>Phone</strong></th>
        <th><strong>Facebook</strong></th>
        <th><strong>Action</strong></th>
      </tr>
    </thead>

      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %>Otto</td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.facebook %></td>

            <td>
              <div class="btn-group" role="group" aria-label="Basic example">
                <%= link_to "Show", friend, class:"btn btn-primary" %>
                <%= link_to "Edit", edit_friend_path(friend), class:"btn btn-warning"%>
                <%= button_to "Delete", friend, method: :delete, class:"btn btn-danger" %>
              </div>
            </td>
        <% end %>
      </tbody>
    
  </table>
</div>

