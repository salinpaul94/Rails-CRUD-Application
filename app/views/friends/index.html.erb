<h1>Friend List</h1>


<div id="friends">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th><strong>Name</strong></th>
        <th><strong>Email</strong></th>
        <th><strong>Phone</strong></th>
        <th><strong>Facebook</strong></th>
        <th><strong>Action</strong></th>
      </tr>
    </thead>

      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <tr>
              <td>
                <%= link_to friend.first_name + ' ' + friend.last_name, friend, class:"showFriendDetails"%>
              </td>
              <td><%= friend.email %></td>
              <td><%= friend.phone %></td>
              <td><%= friend.facebook %></td>

              <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                  <%= link_to "Edit", edit_friend_path(friend), class:"btn btn-warning"%>
                  <%= button_to "Delete", friend, method: :delete, class:"btn btn-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    
  </table>
</div>


